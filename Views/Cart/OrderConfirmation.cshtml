@model SmallBusiness.Models.Order

@{
    Layout = null;
    ViewBag.Title = "Order Confirmation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
          background-color: #eeeeee;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        .container {
            width: 100%;
            max-height:700px;
            max-width: 700px;
            margin: 20px auto;
            padding: 20px;
            background-color: #ffffff;
            border: 20px solid #003152;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }
        h2 {
            margin-top: 0;
            color: #333333;
        }
        .order-details, .order-items {
            margin-bottom: 20px;
        }
        .order-details dt, .order-details dd {
            margin: 0;
            padding: 5px 0;
            display: inline-block;
        }
        .order-details dt {
            font-weight: bold;
            color: #555555;
            width: 150px; /* Adjust this width as needed */
        }
        .order-details dd {
            margin-left: 10px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 10px;
            border: 1px solid #e0e0e0;
            text-align: left;
        }
        th {
            background-color: #f5f5f5;
            color: #333333;
        }
        .btn {
            display: inline-block;
            padding: 10px 20px;
            color: #ffffff;
            background-color: #007bff;
            text-align: center;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s;
        }
        .btn:hover {
                background-color: #004cc5;
        }
        .center {
            text-align: center;
        }
        
            .container {
                padding: 10px;
            }
            table, th, td {
                font-size: 14px;
            }
            .order-details dt {
                width: auto;
                margin-right: 10px;
            }
        
    </style>
</head>
<body >
    <div class="container">
        <h2>Order Confirmation</h2>
        <div class="order-details">
            <h4>Order Details</h4>
            <hr />
            <dl class="dl-horizontal">
                <div>
                    <dt>@Html.DisplayNameFor(model => model.OrderID)</dt>
                    <dd>@Html.DisplayFor(model => model.OrderID)</dd>
                </div>
                <div>
                    <dt>@Html.DisplayNameFor(model => model.OrderData)</dt>
                    <dd>@Html.DisplayFor(model => model.OrderData)</dd>
                </div>
                <div>
                    <dt>@Html.DisplayNameFor(model => model.OrderPrice)</dt>
                    <dd>@Html.DisplayFor(model => model.OrderPrice)</dd>
                </div>
                <div>
                    <dt>@Html.DisplayNameFor(model => model.OrderQuantity)</dt>
                    <dd>@Html.DisplayFor(model => model.OrderQuantity)</dd>
                </div>
                <div>
                    <dt>@Html.DisplayNameFor(model => model.UserID)</dt>
                    <dd>@Html.DisplayFor(model => model.UserID)</dd>
                </div>
            </dl>
        </div>
        <div class="order-items">
            <h4>Order Items</h4>
            <table>
                <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Quantity</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderItems)
                    {
                        <tr>
                            <td>@item.Item.ItemName</td>
                            <td>@item.Quantity</td>
                            <td>@item.Price.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="center">
            <a href="@Url.Action("Payment", "Cart", new { orderId = Model.OrderID })" class="btn">Proceed to Payment</a>
        </div>
    </div>
</body>
</html>

