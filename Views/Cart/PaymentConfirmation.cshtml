@model SmallBusiness.Models.Payment

@{
    Layout = null;
    ViewBag.Title = "Payment Confirmation";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #eeeeee;
        }

        .payment-container {
             background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0));
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.18);
            box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
            max-width: 800px;
            width: 100%;
        }

            .payment-container h2 {
                margin-top: 0;
                margin:30px;
                text-align: center;
            }

        .payment-details {
            margin-top: 20px;
            margin:30px;
        }

            .payment-details dl {
                display: grid;
                grid-template-columns: auto auto;
                gap: 10px;
            }

                .payment-details dl dt {
                    font-weight: bold;
                }
    </style>
</head>
<body style="background-image: url(../images/msg5161028728-43245.jpg);
            background-size: 100%;
            background-position: center;
            background-repeat: no-repeat;
            width: 90%;
            height: 100vh;">
    <div class="payment-container">
        <h2>Payment Confirmation</h2>
        <p style="margin:30px;">Your payment has been successfully processed.</p>
        <div class="payment-details">
            <h4>Payment Details</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.PaymentID)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.PaymentID)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.PaymentType)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.PaymentType)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.VisaNo)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.VisaNo)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.PaymentDate)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.PaymentDate)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.PaymentPrice)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.PaymentPrice)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.OrderID)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.OrderID)
                </dd>
            </dl>
        </div>
        <p style="margin:30px;">
            @Html.ActionLink("View My Order", "MyOrder", "Customer")
        </p>
    </div>
</body>
</html>


