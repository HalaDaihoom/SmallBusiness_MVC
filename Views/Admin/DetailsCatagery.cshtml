@model SmallBusiness.Models.Catagery

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Catagery</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CatageryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CatageryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CatageryImage)
        </dt>
        <dd class="col-sm-10">
            @if (Model.CatageryImage != null && Model.CatageryImage.Length > 0)
            {
                var base64 = Convert.ToBase64String(Model.CatageryImage);
                var imgSrc = $"data:image/png;base64,{base64}";
                <img src="@imgSrc" alt="User Image" style="max-height: 200px; max-width: 200px;" />
            }
            else
            {
                <span>No image available</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="EditCatagery" asp-route-id="@Model?.CatageryId">Edit</a> |
    <a asp-action="IndexCatagery">Back to List</a>
</div>
