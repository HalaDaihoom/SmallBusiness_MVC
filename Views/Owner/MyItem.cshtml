@model Item

@{
    Layout = "~/Views/Shared/_LayoutOwner.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Item Details</title>
    <style>
        body {
            background-image: url(../images/dd3fd012-e794-46c7-9f24-fcb7223de795.jpg);
            background-repeat: no-repeat; /* Prevent the image from repeating */
            background-size: 100%; /* Ensure the image covers the entire background */
            background-position: center; /* Center the image */

            min-height: 100vh;
            margin: 0;
            padding: 0;
        }

        .card {

            background: rgba(255, 255, 255, 0.1);
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgb(0 0 0 / 96%);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            width: 500px;
            height: 600px;
            margin: auto;
            text-align: center;
            margin-top: 30px;
        }

            .card img {
                border-radius: 5px;
                margin-bottom: 20px;
                margin-left: 150px;
                margin-right: 150px;
            }

            .card h1 {
                font-size: 1.5em;
                margin-bottom: 10px;
            }

            .card p {
                margin: 10px 0;
                color: #555;
            }

            .card .buttons {
                display: flex;
                justify-content: space-around;
                margin-top: 20px;
            }

            .card .btn {
                display: inline-block;
                padding: 10px 20px;
                border: none;
                border-radius: 5px;
                text-decoration: none;
                color: white;
                background-color: #6c757d;
                cursor: pointer;
            }

                .card .btn:hover {
                    background-color: #1b1d35;
                }

            .card .btn-secondary {
                background-color: #6c757d;
            }

                .card .btn-secondary:hover {
                    background-color: #5a6268;
                }

            .card .btn-danger {
                background-color: #dc3545;
            }

                .card .btn-danger:hover {
                    background-color: #c82333;
                }
    </style>
</head>
<body>
    <div class="card">
        @{
            var base64 = Convert.ToBase64String(Model.ItemImage);
            var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
        }
        <img src="@imgsrc" alt="Item Image" style="height:200px; width:150px;" />
        <h1>@Model.ItemName</h1>
        <p>Price: @Model.ItemPrice</p>
        <p>Description: @Model.ItemDescription</p>
        <div class="buttons">
            <a href="~/Owner/EditItem?itemId=@Model.ItemID" class="btn btn-primary">Edit</a>
            <a href="~/Owner/ViewReviews?itemId=@Model.ItemID" class="btn btn-primary">View Reviews</a>
            <a href="~/Owner/DeleteItem?itemId=@Model.ItemID" class="btn btn-primary" onclick="return confirm('Are you sure you want to delete this item?')" style="color: white; background-color: #dc3545;">Delete</a>
        </div>
    </div>
</body>
</html>
