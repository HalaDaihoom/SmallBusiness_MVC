@{
    Layout = null;
}
<html lang="en">
<head>

    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f0f0f0;
            flex-direction: column;
        }

        .container {
            text-align: center;
        }

        .button {
            display: inline-block;
            margin: 10px;
            padding: 15px 30px;
            font-size: 16px;
            color: #fff;
            background-color: #007BFF;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }

            .button:hover {
                background-color: #0056b3;
            }

        .image-container {
            text-align: center;
            margin-bottom: 20px;
        }

            .image-container img {
                max-width: 100%;
                height: auto;
                border: 2px solid #ccc;
                border-radius: 10px;
            }
    </style>
</head>
<body>
    <a class="nav-link text-dark" style="font-color:black; font-size:120%; font-style: italic;" asp-area="" asp-controller="Home" asp-action="Index">Home</a>

    <img src="~/images/images - Copy.jpg" />
</body>
</html>