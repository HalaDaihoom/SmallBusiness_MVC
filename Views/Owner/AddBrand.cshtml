@model Brand

@{
    Layout = "~/Views/Shared/_LayoutOwner.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Brand</title>
    <style>
        /* Center the form container */
        body {
            background-image: url(../images/dd3fd012-e794-46c7-9f24-fcb7223de795.jpg);
            background-repeat: no-repeat; /* Prevent the image from repeating */
            background-size: 100%; /* Ensure the image covers the entire background */
            background-position: center; /* Center the image */

            min-height: 100vh;
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh; /* Full viewport height */
           
        }

        /* Style the form card */
        .form-card {
            background: rgba(255, 255, 255, 0.1);
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgb(0 0 0 / 96%);
            max-width: 500px;
            width: 100%;
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

            /* Form heading */
            .form-card h4 {
                text-align: center;
                font-size: x-large;
                font-weight: bold;
            }

        /* Style form groups */
        .form-group {
            margin-bottom: 1rem;
        }

            /* Style labels */
            .form-group label {
                display: block;
                font-weight: 600;
                margin-bottom: 0.5rem;
                color:black;

            }

        /* Style form controls */
        .form-control {
            width: 100%;
            padding: -0.25rem;
            border: 1px solid #0404042b;
            border-radius: 5px;
        }

        /* Style file input */
        .form-control-file {
            border: none;
        }

        /* Style image preview */
        #myImg {
            display: block;
            margin-top: 1rem;
            max-height: 200px;
            width: auto;
            border-radius: 5px;
        }

        /* Center the submit button */
        .text-center {
            text-align: center;
        }

        .btn-primary {
            background-color: #bda7a9;
            border-color: #020202;
            padding: 0.75rem 1.5rem;
            border-radius: 5px;
            cursor: pointer;
            color: #000;
            font-weight: bold;
            border: none;
        }
        /* Additional custom styles */
        .text-danger {
            color: #dc3545;
            margin-top: 0.5rem;
            display: block;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-card">
            <h4>Add Brand</h4>
            <hr />
            <form asp-action="AddBrand" asp-controller="Owner" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>Brand Name</label>
                    <input type="text" name="BrandName" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Category</label>
                    <select name="CatageryId" id="CatageryId" class="form-control">
                        @foreach (Catagery item in ViewBag.CatageryList)
                        {
                            <option value="@item.CatageryId">@item.CatageryName</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label">Brand Image</label>
                    <input type="file" name="clientFile" class="form-control" accept="image/*" onchange="validateImage(event)" />
                    <img id="myImg" height="200" />
                    @if (!string.IsNullOrEmpty(ViewBag.error))
                    {
                        <span class="text-danger">@ViewBag.error</span>
                    }
                </div>
                <div class="text-center">
                    <input type="submit" value="Add Brand" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <script>
        function validateImage(event) {
            var file = event.target.files[0];
            if (file && file.type.startsWith('image/')) {
                var reader = new FileReader();
                reader.onload = function () {
                    var myImg = document.getElementById('myImg');
                    myImg.src = reader.result;
                };
                reader.readAsDataURL(file);
            } else {
                alert('Please upload an image file.');
                event.target.value = ''; // Clear the input
            }
        }
    </script>
</body>
</html>

