@model List<Item>
@{
    Layout = "~/Views/Shared/_LayoutOwner.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Items</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-image: url(../images/dd3fd012-e794-46c7-9f24-fcb7223de795.jpg);
            background-repeat: no-repeat; /* Prevent the image from repeating */
            background-size: 100%; /* Ensure the image covers the entire background */
            background-position: center; /* Center the image */

            min-height: 100vh;
            margin: 0;
            padding: 0;
        }

        main {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        h1 {
            color: black;
            margin-bottom: 20px;
        }

        .buttons .btn {
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            color: white;
            background-color: #6c757d;
            margin-top: 20px;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 150px;
            margin-top: 20px;
        }

        .col-sm-3 {
            flex: 0 0 23%;
            margin-bottom: 20px;
        }

        .border {
            background: rgba(255, 255, 255, 0.1);
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgb(0 0 0 / 96%);
            max-width: 500px;
            width: 100%;
            width: 250px;
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

            .border a {
                text-decoration: none;
                color: inherit;
            }

        .content {
            text-align: center;
        }

        .image {
            height: 150px;
            object-fit: contain;
            border-radius: 15px;
            margin-bottom: 10px;
        }

        .caption {
            text-align: center;
            margin: 10px 0;
        }

        .buttons {
            margin: 10px;
        }

        .btn {
            display: inline-block;
            padding: 5px 10px;
            border-radius: 5px;
            text-decoration: none;
            color: white;
            background-color: #6674ff;
        }

        .btn-primary {
            background-color: #6674ff;
        }

            .btn-primary:hover {
                background-color: #1b1d35;
            }

        .btn-danger {
            background-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }
    </style>
</head>
<body>
    <main>
        <h1>My Items</h1>
        @if (Model.Count == 0)
        {
            <p>No items found for this brand.</p>
            <div class="buttons">
                <form action="~/Owner/AddItem" method="get">
                    <input type="hidden" name="brandId" value="@ViewBag.BrandId" />
                    <button type="submit" class="btn btn-primary">Add Item</button>
                </form>
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-sm-3">
                        <div class="border">
                            <a href="@Url.Action("MyItem", "Owner", new { ItemID = item.ItemID })">
                                @{
                                    var base64 = Convert.ToBase64String(item.ItemImage);
                                    var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                                }
                                <div class="content">
                                    <img src="@imgsrc" class="image" alt="@item.ItemName" />
                                    <div class="caption">
                                        <h4>@item.ItemName</h4>
                                    </div>
                                </div>

                            </a>
                            <div class="buttons">
                                <a href="@Url.Action("EditItem", "Owner", new { itemId = item.ItemID })" class="btn btn-primary">Edit</a>
                                <form asp-action="DeleteItem" asp-controller="Owner" method="post" style="display:inline;">
                                    <input type="hidden" name="itemId" value="@item.ItemID" />
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>


                }
            </div>
            <div class="buttons">
                <form action="~/Owner/AddItem" method="get">
                    <input type="hidden" name="brandId" value="@ViewBag.BrandId" />
                    <button type="submit" class="btn btn-primary">Add Item</button>
                </form>
            </div>
        }

    </main>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>

