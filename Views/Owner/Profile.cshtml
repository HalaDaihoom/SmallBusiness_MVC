@model SmallBusiness.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <style>
        /* Center the main container */
        body {
            background-image: url(../images/teeee.jpeg);
            background-size: 100%; /* Adjust this value to make the image larger */
            background-position: center;
            background-repeat: no-repeat;
            width: 90%;
            height: 100vh;
        }

        .container {
            /*             background:white;
         */ /*             background-image: url(../images/original-e99dd2b07f2bcf9040709a926e62e034.png);
         */
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh; /* Full viewport height */
            /* background-color: #e6e6e6; */
        }

        /* Style the profile card */
        .profile-card {
        
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0));
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.18);
            box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        }

        /* Profile image */
        .profile-img-container {
            background: #f3f3f3;
            padding: 1rem;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-left: 100px;
            margin-right:70px;
        }

        .profile-img {
            border-radius: 50%;
            width: 185px;
            height: 185px;
        }

        /* Style user info */
        .user-info {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        /* Separate user info into two divs */
        .user-details,
        .user-contact {
            display: flex;
            flex-direction: column;
            justify-content: center;
            text-align: center;
        }

            /* Style headings */
            .user-details h1 {
                font-size: 1.9em;
                margin-bottom: 0.5rem;
            }

            .user-details h2 {
                font-size: 1.4em;
                color: #666;
                margin-bottom: 1rem;
            }

        /* Style description */
        .description .data {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 0.5rem;
            font-size: 1.5em;
            color: #333;
        }

            .description .data i {
                margin-right: 0.5rem;
                color: #6674ff;
            }

        /* Style buttons */
        .buttons {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin: 15px;
        }

            .buttons .btn {
                padding: 10px 20px;
                border-radius: 50px;
                text-decoration: none;
                color: #fff;
                font-size: 1em;
            }

        .myBrand {
            background-color: #6674ff;
        }

        .logout {
            background-color: #ff6666;
        }

        /* Style social media icons */
        .social-media {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-top: 1rem;
        }

            .social-media a {
                color: #6674ff;
                font-size: 1.5em;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="profile-card">
            <div class="profile-img-container">
                @{
                    var base64 = Convert.ToBase64String(Model.UserImage);
                    var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                }
                <img src="@imgsrc" class="profile-img" />
            </div>
            <div class="user-info">
                <div class="user-details">
                    <h1>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h1>
                    <h2>Brand Owner</h2>
                </div>
                <div class="user-contact">
                    <div class="description">
                        <div class="data"><i class="fas fa-phone"></i> @Html.DisplayFor(model => model.UserPhone)</div>
                        <div class="data"><i class="fas fa-envelope"></i> @Html.DisplayFor(model => model.UserGender)</div>
                        <div class="data"><i class="fas fa-envelope"></i> @Html.DisplayFor(model => model.UserEmail)</div>

                    </div>
                    <div class="social-media">
                        <a href="https://facebook.com" target="_blank"><i class="fab fa-facebook"></i></a>
                        <a href="https://instagram.com" target="_blank"><i class="fab fa-instagram"></i></a>
                        <a href="https://twitter.com" target="_blank"><i class="fab fa-twitter"></i></a>

                    </div>
                </div>
                <div class="buttons">
                    <a asp-action="MyBrand" asp-controller="Owner" class="btn myBrand">MyBrand</a>
                    <a asp-action="Logout" asp-controller="Owner" class="btn logout">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Add FontAwesome for icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</body>
</html>


